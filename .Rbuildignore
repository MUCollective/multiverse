^.*\.Rproj$
^\.Rproj\.user$
^\.travis\.yml$
^codecov\.yml$
^_pkgdown\.yml$
^\.github$
^pkgdown$
^LICENSE$

# excludes all top level Rmd files
^[A-Za-z0-9-]*\.Rmd$

# excludes non-relevant directories
^README_files$
^docs$
^figure$
^revdep$

# all non-relevant data files
^data/*\.rds$
^data/.*\.csv$

# tests for multiverse code chunks
^tests/testrmd/*

# tangle.js files
^inst/commons/*

# exclude some vignettes for CRAN
^vignettes/dance.Rmd$
^vignettes/_multiverse-export-json.Rmd$

# exclude CRAN comments file
^cran-comments.md$
^doc$
^Meta$
^CRAN-SUBMISSION$

# ignores all non-standard files in docs/deps
!docs/deps/Georgia-0.4.9/*.css
!docs/deps/Nunito_Sans-0.4.9/*.css
